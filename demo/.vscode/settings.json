{
  "typescript.check.workspaceVersion": false,
    // ファイルとフォルダーを除外するための glob パターンを構成します。
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/.DS_Store": true,
      "src/app/**/*.js": true,
      "src/app/**/*.html": true,
      "src/app/**/*.css": true,
      "src/app-shared/**/*.js": true,
      "src/app-shared/**/*.html": true,
      "src/app-shared/**/*.css": true,
      "src/lib/**/*.js": true,
      "src/lib/**/*.html": true,
      "src/lib/**/*.css": true,
      "**/*.js.map": true
    },
  // Controls the font family.
  "editor.fontFamily": "Consolas,Meiryo"
}